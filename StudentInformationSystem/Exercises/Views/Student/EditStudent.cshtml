@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "EditStudent";
}

<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
</div>
<table class="table">
    <thead>
    <tr>
        <th>
            <h3>Edit Student</h3>
        </th>
        <th>
            <h3>Edit Address</h3>
        </th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>
            <div class="row">
                <div class="col-xs-12 col-sm-9">
                    @using (Html.BeginForm())
                    {
                        @Html.HiddenFor(s => s.Student.StudentId)
                        <div class="col-xs-12">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h4 class="panel-title">Personal Details</h4>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label>First Name:</label>
                                        @Html.TextBoxFor(m => m.Student.FirstName, new {@class = "form-control"})
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name:</label>
                                        @Html.TextBoxFor(m => m.Student.LastName, new {@class = "form-control"})
                                    </div>
                                    <div class="form-group">
                                        <label>Major:</label>
                                        @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new {@class = "form-control"})
                                    </div>
                                    <div class="form-group">
                                        <label>GPA:</label>
                                        @Html.TextBoxFor(m => m.Student.GPA, new {@class = "form-control"})
                                    </div>
                                    <h4>Courses</h4>
                                    <div class="form-group">
                                        @Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new {@class = "form-control"})
                                    </div>
                                    <button class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </td>
        <td>
            @Html.Partial("EditAddress")
        </td>
    </tr>
    </tbody>
</table>


