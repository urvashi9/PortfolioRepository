@model Exercises.Models.Data.State

@{
    ViewBag.Title = "DeleteState";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Delete State</h3>
        @Html.ActionLink("Return To List", "States", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(s => s.StateId)
            <p>Are you sure you want to delete the state @Html.DisplayFor(s => s.StateName)?</p>
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "States", "Admin", null, new {@class = "btn btn-sm btn-info"})
        }
    </div>
</div>

