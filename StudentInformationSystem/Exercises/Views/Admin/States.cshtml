@model List<Exercises.Models.Data.State>

@{
    ViewBag.Title = "States";
}

<div class="row">
    <div class="col-xs-12">
        <h3>States</h3>
        @Html.ActionLink("Add State", "AddState", "Admin", null, new {@class = "btn btn-primary"})
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped" style="width: auto;">
            <thead>
            <tr>
                <th>States</th>
                <th></th>
            </tr>         
            </thead>
            <tbody>
                <tr>
                    <th>State Name</th>
                    <th>State Abbreviation</th>
                    <th>Actions</th>
                </tr>
                @foreach (var state in Model)
                {
                    <tr>
                        <td>
                            @state.StateName
                        </td>
                        <td>
                            @state.StateAbbreviation
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditState", "Admin", new {id = state.StateId}, null) |
                        @Html.ActionLink("Delete","DeleteState","Admin", new {id = state.StateId},null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
