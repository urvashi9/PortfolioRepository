@model Exercises.Models.Data.State

@{
    ViewBag.Title = "AddState";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Add States</h3>
        @Html.ActionLink("Return to List", "States", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>State Name</label>
                @Html.TextBoxFor(s => s.StateName, new {@class = "form-control", placeholder = "eg. Michigan"})
                <label>State Abbreviation</label>
                @Html.TextBoxFor(s => s.StateAbbreviation, new {@class = "form-control", placeholder = "eg. MI"})
            </div>
        <button type="submit" class="btn btn-primary btn-sm">Save</button>
        }
    </div>
</div>

