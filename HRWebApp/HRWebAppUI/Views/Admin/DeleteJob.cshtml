@model HRWebApp.Models.Job

@{
    ViewBag.Title = "DeleteJob";
}


<h3>Are you sure you want to delete this job?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobRequirement)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobRequirement)
        </dd>

